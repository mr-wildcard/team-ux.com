---
import "../styles/base.css";

import { Sprite } from "astro-icon";
import Header from "../components/Header/index.astro";
import Toast from "../components/Toast.astro";
interface Props {
  title: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Sprite.Provider>
      <Header />

      <slot />

      <Toast />
    </Sprite.Provider>
    <style is:global>
      @font-face {
        font-family: "SatoshiVariable";
        src: url("/fonts/satoshi-variable.woff2");
        font-weight: 500 900;
        font-display: swap;
      }

      html {
        -webkit-font-smoothing: antialiased;
      }

      body {
        @apply bg-surface1 text-secondary;
      }

      details {
        & summary {
          list-style: none;

          &::-webkit-details-marker {
            display: none;
          }
        }
      }

      #toast {
        transform: translateX(-50%);
        animation-duration: 3s;
        animation-timing-function: cubic-bezier(0.16, 1, 0.3, 1);

        &.show {
          animation-name: showToastCopyTextSuccess;
        }

        &.hide {
          animation-duration: 300ms;
          animation-name: hideToastCopyTextSuccess;
        }
      }

      @keyframes showToastCopyTextSuccess {
        0% {
          transform: translateX(-50%) translateY(0);
        }

        20% {
          transform: translateX(-50%) translateY(calc(-80px - 100%));
        }

        80% {
          transform: translateX(-50%) translateY(calc(-80px - 100%));
        }

        100% {
          transform: translateX(-50%) translateY(0);
        }
      }

      @keyframes hideToastCopyTextSuccess {
        from {
          transform: translateX(-50%) translateY(calc(-80px - 100%));
        }

        to {
          transform: translateX(-50%) translateY(0);
        }
      }
    </style>
  </body>
</html>
