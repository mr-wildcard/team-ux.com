---
import "../styles/base.css";

import { Sprite } from "astro-icon";
import Header from "../components/Header/index.astro";
import Toast from "../components/Toast.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="stylesheet" href="/css/print.css" media="print" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <title>{title}</title>
  </head>
  <body>
    <Sprite.Provider>
      <Header />

      <slot />

      <Toast />
    </Sprite.Provider>
    <style is:global>
      @font-face {
        font-family: "SatoshiVariable";
        src: url("/fonts/satoshi-variable.woff2");
        font-weight: 500 900;
        font-display: swap;
      }

      html {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      body {
        @apply bg-surface1 text-secondary;
      }

      @media (prefers-reduced-motion: no-preference) {
        html {
          scroll-behavior: smooth;
        }
      }

      details {
        & summary {
          list-style: none;

          &::-webkit-details-marker {
            display: none;
          }
        }
      }

      #toast {
        transform: translateX(-50%);
        animation-duration: 6s;
        animation-timing-function: cubic-bezier(0.16, 1, 0.3, 1);

        &.show {
          animation-name: showToastCopyTextSuccess;
        }

        &.hide {
          animation-duration: 300ms;
          animation-name: hideToastCopyTextSuccess;
        }
      }

      @keyframes showToastCopyTextSuccess {
        0% {
          transform: translateX(-50%) translateY(0);
        }

        10% {
          transform: translateX(-50%) translateY(calc(-80px - 100%));
        }

        90% {
          transform: translateX(-50%) translateY(calc(-80px - 100%));
        }

        100% {
          transform: translateX(-50%) translateY(0);
        }
      }

      @keyframes hideToastCopyTextSuccess {
        from {
          transform: translateX(-50%) translateY(calc(-80px - 100%));
        }

        to {
          transform: translateX(-50%) translateY(0);
        }
      }
    </style>
  </body>
</html>
