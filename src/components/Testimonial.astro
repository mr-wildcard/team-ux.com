---
export interface Testimonial {
  content: string;
  company: string;
  author: string;
  contentLang?: string;
}

interface Props {
  viewMode: "block" | "inline";
  testimonial: Testimonial;
}

const { viewMode = "block", testimonial } = Astro.props;
---

{
  viewMode === "block" && (
    <bloquote class="testimonial flex flex-col gap-5 2xl:gap-0 px-5 py-6 2xl:p-[50px] bg-neutral4 rounded-[26px]">
      <p
        lang={testimonial.contentLang ?? undefined}
        class="text-body-medium 2xl:mt-[50px] mb-auto"
      >
        <span class="block mb-10 2xl:mb-[40px] text-primary text-[200px] 2xl:text-[240px] translate-x-[-12px] translate-y-[56px] 2xl:translate-x-[-15px] 2xl:translate-y-[20px]">
          &ldquo;
        </span>
        {testimonial.content}&rdquo;
      </p>
      <footer class="2xl:mt-10 text-body-medium-bold">
        {testimonial.author}
        <cite class="not-italic">
          <span class="text-primary">&nbsp;{testimonial.company}</span>
        </cite>
      </footer>
    </bloquote>
  )
}

{
  viewMode === "inline" && (
    <bloquote class="testimonial flex flex-col 2xl:flex-row gap-6 px-5 py-6 2xl:p-10 bg-neutral4 rounded-[26px]">
      <div class="2xl:flex-[0_0_78px] h-[47px] 2xl:h-[54px] overflow-hidden">
        <span class="block text-primary text-[200px] translate-x-[-12px] translate-y-[-79px]">
          &ldquo;
        </span>
      </div>
      <div class="flex flex-col gap-5">
        <p lang={testimonial.contentLang ?? undefined} class="text-body-medium">
          {testimonial.content}&rdquo;
        </p>
        <footer class="text-body-medium-bold">
          {testimonial.author}
          <cite>
            <span class="text-primary">&nbsp;{testimonial.company}</span>
          </cite>
        </footer>
      </div>
    </bloquote>
  )
}
