---
import { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
  class?: string;
  as?: Tag;
}>;

const { as, class: cssClasses } = Astro.props;

const HTMLTag = as || "div";
---

<HTMLTag
  role="presentation"
  class:list={[
    "bg-form",
    "w-[600px]",
    "h-[303px]",
    "lg:w-[865px]",
    "lg:h-[437px]",
    "2xl:w-[1159px]",
    "2xl:h-[586px]",
    "bg-surface2",
    "rounded-[1000px]",
    "rotate-[-30.785deg]",
    cssClasses,
  ]}
/>
