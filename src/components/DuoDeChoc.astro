---
import Brush from "./@common/Brush.astro";
import PictureYuna from "./images/Yuna.astro";
import PictureDaniela from "./images/Daniela.astro";
interface Props {
  variant: "small" | "big";
}

const { variant } = Astro.props;
---

{
  variant === "small" && (
    <div class="isolate relative flex justify-center">
      <Brush
        id="1"
        width={210}
        height={249}
        class="absolute z-0 top-0 left-0 rotate-[-90deg] translate-x-[20px] translate-y-[-20px]"
      />
      <PictureYuna width={85} height={210} class="relative z-10 mr-3" />
      <PictureDaniela width={85} height={210} class="relative z-10" />
    </div>
  )
}

{
  variant === "big" && (
    <div class="isolate relative flex ">
      <Brush
        id="1"
        width={352}
        height={418}
        class="absolute z-0 top-[-30px] left-0 rotate-[-165.467deg] translate-x-[-10px]"
      />
      <PictureYuna width={156} height={384} class="relative z-10 mr-4" />
      <PictureDaniela width={156} height={384} class="relative z-10" />
    </div>
  )
}
