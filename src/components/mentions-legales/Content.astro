---
import data from "../../data/mentions-legales/data.yaml";
import Section from "./Section.astro";
import Block from "./Block.astro";
import Grid from "../@common/Grid.astro";

function obfuscateContent(content) {
  const matches = Array.from(content.matchAll(/\{\{\{(.+?)\}\}\}/g));

  if (!matches.length) {
    return content;
  }

  let obfuscatedContent = content;
  for (const [match, token] of matches) {
    const contentToObfuscate = data.tokens_to_obfuscate[token];

    obfuscatedContent = obfuscatedContent.replace(
      match,
      `{{{${Buffer(contentToObfuscate).toString("base64")}}}}`,
    );
  }

  return obfuscatedContent;
}
---

<div class="mentions-legales container mt-20">
  <Grid>
    <div class="xl:col-start-2 xl:col-span-10 xl:space-y-[140px]">
      {
        data.content.map((section) => {
          return (
            <Section title={section.title}>
              <div
                class:list={[
                  "space-y-5",
                  {
                    "xl:w-[50%]": section.grid_span === 5,
                    "xl:w-[69%]": section.grid_span === 7,
                  },
                ]}
              >
                {section.blocks.map((block) => {
                  return (
                    <Block title={block.title}>
                      {block.content.map((content) => {
                        if ("paragraph" in content) {
                          return <p>{obfuscateContent(content.paragraph)}</p>;
                        }

                        if ("list" in content) {
                          return (
                            <ul class="ml-7 list-disc list-outside">
                              {content.list.map((item) => (
                                <li>
                                  <p class="ml-1">{obfuscateContent(item)}</p>
                                </li>
                              ))}
                            </ul>
                          );
                        }
                      })}
                    </Block>
                  );
                })}
              </div>
            </Section>
          );
        })
      }
    </div>
  </Grid>
</div>

<style>
  .mentions-legales {
    & :global(a[href^="tel"]),
    & :global(a[href^="mailto"]) {
      @apply text-primary underline underline-offset-[4px];
    }
  }
</style>
