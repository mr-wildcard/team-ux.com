---
const { width, height, class: cssClasses, alt = "", ...props } = Astro.props;
---

<picture>
  <source srcset="/images/raw/daniela.avif" type="image/avif" />
  <source srcset="/images/raw/daniela.webp" type="image/webp" />

  <img
    src="/images/raw/daniela.png"
    decoding="async"
    class:list={["rounded-t-full", "rounded-b-full", cssClasses]}
    alt={alt}
    {...props}
  />
</picture>
