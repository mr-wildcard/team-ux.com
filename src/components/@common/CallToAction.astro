---
import Icon from "./Icon.astro";
import { HTMLAttributes, Polymorphic, HTMLTag } from "astro/types";

type BasicHTMLAttrbutes = HTMLAttributes<"a"> & HTMLAttributes<"button">;

type Props<Tag extends HTMLTag> = BasicHTMLAttrbutes &
  Polymorphic<{
    type?: "primary" | "secondary";
    variant?: "outlined" | "transparent";
    href?: string;
    leftIcon?: string;
    rightIcon?: string;
    as?: Tag;
  }>;

const {
  type = "primary",
  variant,
  href,
  leftIcon,
  rightIcon,
  as,
  class: cssClasses,
  ...props
} = Astro.props;

const HTMLTag = as ? as : href ? "a" : "button";
const htmlAttributes = {
  ...props,
  href: href ?? undefined,
  "class:list": [
    cssClasses,
    "call-to-action",
    {
      transparent: variant === "transparent",
      outlined: variant === "outlined",
      primary: type === "primary",
      secondary: type === "secondary",
    },
    {
      "text-label-large": variant !== "transparent" && type === "primary",
      "text-label-medium": variant === "transparent" && type === "secondary",
      "text-label-medium-bold":
        (variant !== "transparent" && type === "secondary") ||
        (variant === "transparent" && type === "primary"),
    },
  ],
};

const iconSize = variant === "transparent" ? 18 : 24;
---

<HTMLTag {...htmlAttributes}>
  {leftIcon && <Icon name={leftIcon} width={iconSize} height={iconSize} />}
  <slot />
  {rightIcon && <Icon name={rightIcon} width={iconSize} height={iconSize} />}
</HTMLTag>

<style>
  .call-to-action {
    display: flex;
    align-items: center;
    width: fit-content;

    &:not(.transparent) {
      border-radius: 100px;

      &.primary {
        @apply px-10 py-4 gap-2.5 text-neutral4 bg-primary hover:bg-secondary;

        &.outlined {
          @apply text-primary bg-neutral4;
        }

        & :global([astro-icon]) {
          @apply fill-neutral4;
        }
      }

      &.secondary {
        @apply px-5	py-2.5 gap-1.5 text-primary bg-neutral4;
      }

      &.primary.outlined,
      &.secondary {
        @apply shadow-primary;

        box-shadow: inset 0 0 0 2px;

        &:hover {
          @apply border-primary hover:text-neutral4 hover:bg-primary hover:shadow-primary;

          box-shadow: none;
        }

        & :global([astro-icon]) {
          @apply fill-primary;
        }

        &:hover {
          & :global([astro-icon]) {
            @apply fill-neutral4;
          }
        }
      }
    }

    &.transparent {
      @apply gap-2 underline-offset-[4px] hover:underline;

      &.primary {
        @apply text-primary;
      }

      &.secondary {
        @apply text-secondary;
      }
    }
  }
</style>
