---
interface Props {
  id: 1 | 2 | 3 | 4;
}

const { id, loading = "lazy", ...props } = Astro.props;

const brushesById = new Map([
  [1, "/images/raw/brush-1"],
  [2, "/images/raw/brush-2"],
  [3, "/images/raw/brush-3"],
  [4, "/images/raw/brush-4"],
]);

const brush = brushesById.get(id);
---

<picture>
  <source srcset={`${brush}.avif`} type="image/avif" />
  <source srcset={`${brush}.webp`} type="image/webp" />

  <img
    src={`${brush}.png`}
    loading={loading}
    decoding="async"
    {...props}
    alt=""
    role="presentation"
  />
</picture>
