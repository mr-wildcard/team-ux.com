---
import { Picture } from "astro:assets";

interface Props {
  src: string;
  width?: number;
  height?: number;
  alt?: string;
  densities?: number[];
  loading?: string;
}

const {
  src,
  width,
  height,
  alt = "",
  densities = [1, 2],
  loading = "lazy",
  ...props
} = Astro.props;
---

<Picture
  src={src}
  width={width}
  height={height}
  alt={alt}
  formats={["avif", "webp"]}
  densities={densities}
  loading={loading}
  {...props}
/>
