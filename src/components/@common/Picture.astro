---
import { Picture } from "astro:assets";

interface Props {
  src: string;
  width?: number;
  height?: number;
  alt?: string;
  densities?: number[];
}

const { src, width, height, alt = "", densities = [2], ...props } = Astro.props;
---

<Picture
  src={src}
  width={width}
  height={height}
  alt={alt}
  formats={["avif", "webp"]}
  densities={densities}
  {...props}
/>
