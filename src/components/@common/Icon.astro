---
import { Icon } from "astro-icon/components";

export interface Props {
  name:
    | "arrow_drop_down"
    | "arrow_drop_up"
    | "chevron_right"
    | "content_copy"
    | "expand_less"
    | "expand_more"
    | "forward"
    | "logo"
    | "open_in_new"
    | "quote"
    | "visibility"
    | "chevron_right_breadcrumb"
    | "arrow_up";
  width: number;
  height: number;
}

const { name, width, height, ...props } = Astro.props;
---

<Icon
  focusable="false"
  aria-hidden="true"
  width={width}
  height={height}
  name={name}
  {...props}
/>
