---
import { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
  children: any;
  class?: string;
  outerGap?: boolean;
  as?: Tag;
}>;

const { as: HTMLTag = "div", class: cssClasses, ...props } = Astro.props;
---

<HTMLTag
  class:list={[
    "grid",
    "gap-y-0",
    "gap-x-5",
    "grid-cols-6",
    "px-5",
    "lg:gap-x-8",
    "lg:grid-cols-12",
    "xl:px-0",
    cssClasses,
  ]}
  {...props}
>
  <slot />
</HTMLTag>
