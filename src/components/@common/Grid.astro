---
interface Props {
  class: string;
  outerGap?: boolean;
  as?: string;
}

const { as: HTMLTag = "div", outerGap = true, class: cssClasses } = Astro.props;
---

<HTMLTag
  class:list={[
    "grid",
    "gap-y-0",
    "gap-x-5",
    "grid-cols-4",
    "md:grid-cols-8",
    "xl:gap-x-8",
    "xl:grid-cols-12",
    {
      "px-5": outerGap,
      "xl:px-0": outerGap,
    },
    cssClasses,
  ]}
>
  <slot />
</HTMLTag>
