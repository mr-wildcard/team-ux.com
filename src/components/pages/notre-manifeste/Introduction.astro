---
import Grid from "../../@common/Grid.astro";
import data from "../../../data/notre-manifeste/introduction.yaml";
import Brush from "../../@common/Brush.astro";
import BackgroundForm1 from "../../BackgroundForm1.astro";
---

<section
  class="overflow-hidden pb-[328px] mb-[-328px] lg:pt-[350px] lg:mt-[-350px] lg:pb-[312px] lg:mb-[-312px]"
>
  <div class="container">
    <Grid>
      <div class="col-span-full lg:col-start-2 lg:col-span-6">
        <div class="isolate relative">
          <Brush
            id="1"
            class="absolute z-[-1] left-0 lg:left-auto lg:right-[-202px] top-[calc(100%-60px)] lg:top-[-22px] w-[214px] h-[254px] lg:w-[321px] lg:h-[381px]"
          />
          <Brush
            id="4"
            class="absolute z-[-2] right-0 lg:right-[-361px] top-[calc(100%-60px)] lg:top-[-22px] lg:w-[383px] lg:h-[381px] w-[255px] h-[254px]"
          />
          <BackgroundForm1
            class="absolute z-[-3] right-[-395px] bottom-[-251px] lg:right-[-1060px] lg:bottom-[-160px]"
          />
          <div class="p-10 bg-surface7 rounded-[26px]">
            <p class="text-body-medium">
              {data.content}
            </p>
          </div>
        </div>
      </div>
    </Grid>
  </div>
</section>
