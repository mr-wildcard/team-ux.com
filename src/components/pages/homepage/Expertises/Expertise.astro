---
interface Props {
  expertise: {
    name: string;
    description: string;
    skills: string[];
  };
}

const { expertise } = Astro.props;
---

<div class="flex flex-col space-y-5 p-6 lg:p-10 rounded-[26px] bg-neutral4">
  <h3 class="text-headline-medium-bold">{expertise.name}</h3>
  <p class="text-body-large">{expertise.description}</p>
  <ul class="flex flex-col space-y-0.5">
    {
      expertise.skills.map((skill) => {
        return (
          <li class="text-body-medium bg-surface5 rounded">
            <h4>{skill}</h4>
          </li>
        );
      })
    }
  </ul>
</div>

<style>
  li {
    padding: 9px 20px;

    @screen lg {
      padding-left: 11px;
      padding-right: 11px;
    }

    @screen xl {
      padding: 11px 20px;
    }
  }

  li:first-child {
    padding-top: 16px;
    border-radius: 20px 20px 4px 4px;
  }

  li:last-child {
    padding-bottom: 16px;
    border-radius: 4px 4px 20px 20px;
  }
</style>
