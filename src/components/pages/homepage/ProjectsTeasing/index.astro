---
import Grid from "../../../@common/Grid.astro";
import Brush from "../../../@common/Brush.astro";
import CallToAction from "../../../@common/CallToAction.astro";
import data from "../../../../data/homepage/projects-teasing.yaml";
import BackgroundForm1 from "../../../BackgroundForm1.astro";
import Teasing from "./Teasing.astro";

const {
  teasings: [teasing1, teasing2, teasing3, teasing4, teasing5],
} = data;
---

<section class="overflow-hidden pt-14">
  <div class="container relative mb-[100px]">
    <BackgroundForm1
      class="absolute top-[95px] left-[-600px] z-[-1] w-[1159px] h-[586px] rotate-[-30.785deg]"
    />

    <h2 class="mb-20 text-display-small text-center">{data.title}</h2>
    <Grid as="ul" class="gap-y-5 mb-[60px]">
      <li class="xl:col-start-2 xl:col-span-7 isolate relative">
        <Brush
          id="3"
          class="absolute z-[-1] w-[156px] h-[145px] translate-x-[-60px] translate-y-[-60px]"
        />
        <Teasing content={teasing1} />
      </li>
      <li class="xl:col-start-4 xl:col-span-4">
        <Teasing content={teasing2} />
      </li>
      <li class="xl:col-start-8 xl:col-span-4 isolate relative">
        <Brush
          id="3"
          class="absolute right-0 bottom-0 z-[-1] w-[215px] h-[200px] translate-x-[105px] translate-y-[100px]"
        />
        <Teasing content={teasing3} />
      </li>
      <li class="xl:col-start-2 xl:col-span-5">
        <Teasing content={teasing4} />
      </li>
      <li class="xl:col-start-7 xl:col-span-4">
        <Teasing content={teasing5} />
      </li>
    </Grid>
    <div class="flex">
      <CallToAction href="/projets" class="mx-auto" rightIcon="forward">
        {data.callToAction.label}
      </CallToAction>
    </div>
  </div>
</section>
