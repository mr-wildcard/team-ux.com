---
import Grid from "../../../@common/Grid.astro";
import Brush from "../../../@common/Brush.astro";
import CallToAction from "../../../@common/CallToAction.astro";
import data from "../../../../data/homepage/projects-teasing.yaml";
import BackgroundForm1 from "../../../BackgroundForm1.astro";
import Teasing from "./Teasing.astro";

const {
  teasings: [teasing1, teasing2, teasing3, teasing4, teasing5],
} = data;
---

<section class="overflow-hidden">
  <div class="container relative">
    <BackgroundForm1
      class="hidden lg:block absolute z-[-1] top-[95px] left-[-600px]"
    />

    <Grid>
      <h2
        class="col-span-full mb-8 lg:mb-20 text-headline-extra-large lg:text-display-small lg:text-center"
      >
        {data.title}
      </h2>
    </Grid>
    <Grid as="ul" class="gap-y-2.5 lg:gap-y-5 mb-10 lg:mb-[60px]">
      <li class="col-span-full lg:col-start-2 lg:col-span-7 isolate relative">
        <Brush
          id="3"
          class="hidden lg:block absolute z-[-1] w-[156px] h-[145px] translate-x-[-60px] translate-y-[-60px]"
        />
        <Teasing content={teasing1} />
      </li>
      <li class="col-span-full lg:col-start-4 lg:col-span-4">
        <Teasing content={teasing2} />
      </li>
      <li class="col-span-full lg:col-start-8 lg:col-span-4 isolate relative">
        <Brush
          id="3"
          class="hidden lg:block absolute right-0 bottom-0 z-[-1] w-[215px] h-[200px] translate-x-[105px] translate-y-[100px]"
        />
        <Teasing content={teasing3} />
      </li>
      <li class="col-span-full lg:col-start-2 lg:col-span-5">
        <Teasing content={teasing4} />
      </li>
      <li class="col-span-full lg:col-start-7 lg:col-span-4">
        <Teasing content={teasing5} />
      </li>
    </Grid>
    <div class="flex">
      <CallToAction href="/projets" class="mx-auto" rightIcon="forward">
        {data.callToAction.label}
      </CallToAction>
    </div>
  </div>
</section>
