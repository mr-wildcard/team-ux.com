---
import Brush from "../../../@common/Brush.astro";
import Image from "../../../@common/Image.astro";
import Grid from "../../../@common/Grid.astro";
import Icon from "../../../@common/Icon.astro";
import CallToAction from "../../../@common/CallToAction.astro";
import DuoDeChoc from "../../../../components/DuoDeChoc.astro";
import data from "../../../../data/homepage/derriere-team-ux.yaml";

const { block1, block2 } = data;
---

<section class="mb-[85px]">
  <Icon name="oval" />

  <div class="relative flex flex-col gap-8 pb-[100px] bg-neutral4">
    <div class="container">
      <h2 class="mb-20 text-display-small text-center">{data.title}</h2>
      <Grid>
        <div
          class="2xl:col-start-2 2xl:col-span-5 p-10 flex flex-col gap-8 bg-surface6 rounded-[26px]"
        >
          <h3 class="mb-8 text-headline-medium-bold">{block1.title}</h3>

          <div class="w-[250px]">
            <DuoDeChoc variant="small" />
            <p class="text-label-large text-primary text-center mt-2.5">
              {block1.pictureLegend}
            </p>
          </div>

          <p class="text-body-medium">{block1.paragraph}</p>

          <CallToAction
            href="/nos-deux-profils"
            type="secondary"
            rightIcon="forward"
          >
            {block1.callToAction.label}
          </CallToAction>
        </div>
        <div
          class="2xl:col-span-5 flex flex-col gap-8 h-fit p-10 bg-surface7 rounded-[26px]"
        >
          <h3 class="text-headline-medium-bold">{block2.title}</h3>
          <div class="relative">
            <Brush id="1" class="w-[173px] h-[206px]" />
            <Brush
              id="4"
              class="absolute top-0 left-[52px] w-[207px] h-[206px]"
            />
          </div>
          <p class="text-body-medium">{block2.paragraph}</p>
          <CallToAction
            href="/notre-manifeste"
            type="secondary"
            rightIcon="forward"
          >
            {block2.callToAction.label}
          </CallToAction>
        </div>
      </Grid>
    </div>
    <div class="container">
      <Grid>
        <div class="2xl:col-start-2 2xl:col-span-10 flex flex-col gap-0.5">
          <div
            class="flex flex-col gap-10 p-10 bg-surface5 rounded-t-[26px] rounded-b-[4px]"
          >
            <h3 class="text-headline-medium-bold">
              {data.certifications.title}
            </h3>
            <ul class="flex items-center justify-between">
              <li>
                <Image
                  srcSet={["/images/access42.png"]}
                  width="80"
                  height="58"
                  alt="Logo du cabinet de conseil français expert en accessibilité numérique Access42"
                />
              </li>
              <li>
                <Image
                  srcSet={["/images/IDF.png"]}
                  alt=""
                  width="170"
                  height="56"
                  alt="Logo du site de formation Interaction Design Foundation"
                />
              </li>
              <li>
                <Image
                  srcSet={["/images/w3c.png"]}
                  width="90"
                  height="46"
                  alt="Logo du W3C"
                />
              </li>
              <li>
                <Image
                  srcSet={["/images/opquast.png"]}
                  width="140"
                  height="36"
                  alt="Logo de l'organisme de certification Opquast"
                />
              </li>
              <li>
                <Image
                  srcSet={["/images/uxer.png"]}
                  width="46"
                  height="47"
                  alt="Logo de l'agence digitale UXER"
                />
              </li>
              <li>
                <Image
                  srcSet={["/images/shifta.png"]}
                  width="106"
                  height="40"
                  alt="Logo de l'université SHIFTA"
                />
              </li>
              <li>
                <Image
                  srcSet={["/images/INR.png"]}
                  width="120"
                  alt="Logo de l'institut du numérique responsable"
                  height="44"
                />
              </li>
            </ul>
          </div>
          <div
            class="flex flex-col gap-10 p-10 bg-surface5 rounded-t-[4px] rounded-b-[26px]"
          >
            <h3 class="text-headline-medium-bold">
              {data.commited.title}
            </h3>
            <ul class="flex items-center gap-[44px]">
              <li>
                <Image
                  srcSet={["/images/diseno-etico.png"]}
                  width="90"
                  height="49"
                  alt="Logo de l'association Desino Etico"
                />
              </li>
              <li>
                <Image
                  srcSet={["/images/designers-ethiques.png"]}
                  width="105"
                  height="49"
                  alt="Logo de l'association Designers Éthiques"
                />
              </li>
            </ul>
          </div>
        </div>
      </Grid>
    </div>
  </div>

  <Icon name="oval" />
</section>

<style>
  section :global([astro-icon="oval"]) {
    width: 100%;
    height: 145px;

    &:last-of-type {
      transform: scaleY(-1);
    }
  }
</style>
