---
import Brush from "../../../@common/Brush.astro";
import Image from "../../../@common/Image.astro";
import Grid from "../../../@common/Grid.astro";
import Icon from "../../../@common/Icon.astro";
import CallToAction from "../../../@common/CallToAction.astro";
import DuoDeChoc from "../../../../components/DuoDeChoc.astro";
import data from "../../../../data/homepage/derriere-team-ux.yaml";

const { block1, block2 } = data;
---

<section>
  <Icon name="oval" />

  <div class="relative flex flex-col gap-8 pb-20 lg:pb-[100px] bg-neutral4">
    <div class="container">
      <Grid>
        <h2
          class="col-span-full mt-[60px] lg:mt-0 mb-8 lg:mb-20 text-headline-extra-large lg:text-display-small lg:text-center"
        >
          {data.title}
        </h2>
      </Grid>

      <Grid class="gap-y-5">
        <div
          class="col-span-full lg:col-start-2 lg:col-span-5 flex flex-col gap-8 p-5 lg:p-10 bg-surface6 rounded-[26px]"
        >
          <h3 class="text-headline-medium-bold">
            {block1.title}
          </h3>

          <div class="mx-auto lg:mx-0 w-[250px]">
            <DuoDeChoc variant="small" />
            <p class="text-label-large text-primary text-center mt-2.5">
              {block1.pictureLegend}
            </p>
          </div>

          <p class="text-body-medium">{block1.paragraph}</p>

          <CallToAction
            href="/nos-deux-profils"
            type="secondary"
            rightIcon="forward"
          >
            {block1.callToAction.label}
          </CallToAction>
        </div>
        <div
          class="col-span-full lg:col-span-5 flex flex-col gap-8 h-fit p-5 lg:p-10 bg-surface7 rounded-[26px]"
        >
          <h3 class="text-headline-medium-bold">{block2.title}</h3>
          <div class="relative w-[200px] lg:w-auto mx-auto lg:mx-0">
            <Brush
              alt=""
              id="1"
              class="w-[133px] h-[160px] lg:w-[173px] lg:h-[206px]"
            />
            <Brush
              alt=""
              id="4"
              class="absolute top-0 left-[41px] lg:left-[52px] w-[160px] h-[160px] lg:w-[207px] lg:h-[206px]"
            />
          </div>
          <p class="text-body-medium">{block2.paragraph}</p>
          <CallToAction
            href="/notre-manifeste"
            type="secondary"
            rightIcon="forward"
          >
            {block2.callToAction.label}
          </CallToAction>
        </div>
      </Grid>
    </div>
    <div class="container">
      <Grid>
        <div
          class="col-span-full lg:col-start-2 lg:col-span-10 flex flex-col gap-0.5"
        >
          <div
            class="flex flex-col gap-10 p-5 lg:p-10 bg-surface5 rounded-t-[26px] rounded-b-[4px]"
          >
            <h3 class="text-headline-medium-bold">
              {data.certifications.title}
            </h3>
            <ul class="certifications">
              <li>
                <span class="hidden print:inline">Access 42</span>

                <Image
                  srcSet={["/images/access42.png"]}
                  width="80"
                  height="58"
                  alt="Access42"
                />
              </li>
              <li>
                <span class="hidden print:inline"
                  >Interaction Design Foundation</span
                >

                <Image
                  srcSet={[
                    "/images/certifications/IDF.png",
                    "/images/certifications/IDF.avif",
                    "/images/certifications/IDF.webp",
                  ]}
                  alt=""
                  width={170}
                  height={56}
                  alt="Interaction Design Foundation"
                />
              </li>
              <li>
                <span class="hidden print:inline">W3C</span>

                <Image
                  srcSet={["/images/w3c.png"]}
                  width={90}
                  height={46}
                  alt="W3C"
                />
              </li>
              <li>
                <span class="hidden print:inline">Opquast</span>

                <Image
                  srcSet={["/images/opquast.png"]}
                  width={140}
                  height={36}
                  alt="Opquast"
                />
              </li>
              <li>
                <span class="hidden print:inline">UXer</span>

                <Image
                  srcSet={["/images/uxer.png"]}
                  width={46}
                  height={47}
                  alt="UXER"
                />
              </li>
              <li>
                <span class="hidden print:inline">SHIFTA by Elisava</span>

                <Image
                  srcSet={["/images/shifta.png"]}
                  width={106}
                  height={40}
                  alt="Shifta by ELISAVA"
                />
              </li>
              <li>
                <span class="hidden print:inline"
                  >Institut du Numérique Responsable</span
                >

                <Image
                  srcSet={["/images/INR.png"]}
                  width={120}
                  height={44}
                  alt="Institut du Numérique Responsable"
                />
              </li>
            </ul>
          </div>
          <div
            class="flex flex-col gap-10 p-5 lg:p-10 bg-surface5 rounded-t-[4px] rounded-b-[26px]"
          >
            <h3 class="text-headline-medium-bold">
              {data.commited.title}
            </h3>
            <ul
              class="flex items-center justify-around sm:justify-start gap-[44px]"
            >
              <li>
                <span class="hidden print:inline">Desino Etico</span>

                <Image
                  srcSet={["/images/diseno-etico.png"]}
                  width="90"
                  height="49"
                  alt="Desino Etico"
                />
              </li>
              <li>
                <span class="hidden print:inline">Designers Éthiques</span>

                <Image
                  srcSet={["/images/designers-ethiques.png"]}
                  width="105"
                  height="49"
                  alt="Designers Éthiques"
                />
              </li>
            </ul>
          </div>
        </div>
      </Grid>
    </div>
  </div>

  <Icon name="oval" />
</section>

<style>
  section :global([astro-icon="oval"]) {
    width: 100%;
    height: 10px;

    &:last-of-type {
      transform: scaleY(-1);
    }
  }

  @screen 2xl {
    section :global([astro-icon="oval"]) {
      height: 145px;
    }
  }

  .certifications {
    @apply flex items-center flex-wrap justify-around sm:justify-start 2xl:justify-between space-y-0 gap-10;

    li {
      width: 120px;

      img {
        margin-inline: auto;
      }
    }
  }
</style>
