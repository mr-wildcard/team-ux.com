---
import Grid from "../../../@common/Grid.astro";
import data from "../../../../data/homepage/temoignages.yaml";
import CallToAction from "../../../@common/CallToAction.astro";
import Testimonial from "../../../Testimonial.astro";
---

<section class="container">
  <Grid>
    <h2
      class="col-span-full text-headline-small lg:text-headline-medium text-neutral1 mb-6 lg:mb-10"
    >
      {data.title}
    </h2>
  </Grid>
  <Grid as="ul" class="gap-y-5">
    {
      data.testimonials.map((testimonial) => {
        return (
          <li class="col-span-full lg:col-span-4">
            <Testimonial testimonial={testimonial} />
          </li>
        );
      })
    }
  </Grid>
  <div class="flex justify-center mt-10 lg:mt-[60px]">
    <CallToAction href="/temoignages" type="secondary" rightIcon="forward">
      {data.callToAction.label}
    </CallToAction>
  </div>
</section>
