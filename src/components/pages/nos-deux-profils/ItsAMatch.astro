---
import data from "../../../data/nos-deux-profils/match.yaml";
import Icon from "../../@common/Icon.astro";
import Grid from "../../@common/Grid.astro";
import CallToAction from "../../@common/CallToAction.astro";
import Brush from "../../@common/Brush.astro";
import TeamUXStamp from "../../TeamUXStamp.astro";
---

<section class="mb-[180px] 2xl:mb-0">
  <Icon name="oval" />

  <div class="bg-neutral4">
    <div class="container">
      <div class="pt-20 flex justify-center">
        <TeamUXStamp />
      </div>

      <h3
        class="mt-[60px] mb-5 2xl:mb-10 text-headline-extra-large 2xl:text-display-small text-center"
      >
        {data.title}
      </h3>
      <Grid>
        <p
          class="col-span-full 2xl:col-start-4 2xl:col-span-6 mb-20 text-body-large 2xl:text-body-extra-large 2xl:text-center"
        >
          {data.content}
        </p>

        <div class="col-span-full 2xl:col-start-2 2xl:col-span-10">
          <div class="px-5 py-6 2xl:p-10 bg-surface5 rounded-[26px]">
            <h3 class="mb-10 text-headline-medium-bold">
              Voici comment nous travaillons
            </h3>
            <ul
              class="flex flex-col gap-11 2xl:gap-0 2xl:flex-row items-center justify-between isolate"
            >
              <li>
                <Brush
                  id="1"
                  class="absolute z-[-1] w-[100px] h-[119px] left-0 top-[-7px] translate-x-1/2 opacity-20"
                />
                <Icon name="softskill-details" />
                <span class="text-label-medium 2xl:text-label-large"
                  >Sens du travail</span
                >
              </li>
              <li>
                <Brush
                  id="1"
                  class="absolute z-[-1] w-[100px] h-[119px] left-0 top-[-7px] rotate-[180deg] translate-x-1/2 opacity-20"
                />
                <Icon name="softskill-kindness" />
                <span class="text-label-medium 2xl:text-label-large"
                  >Bienveillance</span
                >
              </li>
              <li>
                <Brush
                  id="1"
                  class="absolute z-[-1] w-[100px] h-[119px] left-0 top-[-7px] translate-x-1/2 opacity-20"
                />
                <Icon name="softskill-fiability" />
                <span class="text-label-medium 2xl:text-label-large"
                  >Fiabilité</span
                >
              </li>
              <li>
                <Brush
                  id="1"
                  class="absolute z-[-1] w-[100px] h-[119px] left-0 top-[-7px] rotate-[180deg] translate-x-1/2 opacity-20"
                />
                <Icon name="softskill-sincerity" />
                <span class="text-label-medium 2xl:text-label-large"
                  >Sincerité</span
                >
              </li>
              <li>
                <Brush
                  id="1"
                  class="absolute z-[-1] w-[100px] h-[119px] left-0 top-[-7px] translate-x-1/2 opacity-20"
                />
                <Icon name="softskill-creative" />
                <span class="text-label-medium 2xl:text-label-large"
                  >Force de proposition</span
                >
              </li>
            </ul>
          </div>
        </div>
      </Grid>
      <div class="mt-10 2xl:mt-[60px] pb-20 2xl:pb-[100px]">
        <CallToAction
          href="/notre-manifeste"
          type="primary"
          rightIcon="forward"
          class="mx-auto"
        >
          Lire notre manifeste
        </CallToAction>
      </div>
    </div>
  </div>
  <Icon name="oval" />
</section>

<style>
  section :global([astro-icon="oval"]) {
    width: 100%;
    height: 10px;

    &:last-of-type {
      transform: scaleY(-1);
    }
  }

  @screen 2xl {
    section :global([astro-icon="oval"]) {
      height: 145px;
    }
  }

  ul {
    & li {
      @apply relative flex flex-col items-center;

      width: 200px;

      span {
        @apply text-label-large;
      }

      & :global(svg) {
        @apply mb-5;

        width: 100px;
        height: 100px;
      }
    }
  }
</style>
