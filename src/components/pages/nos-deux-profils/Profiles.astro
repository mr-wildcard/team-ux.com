---
import dataYuna from "../../../data/nos-deux-profils/yuna.yaml";
import dataDaniela from "../../../data/nos-deux-profils/daniela.yaml";
import Grid from "../../@common/Grid.astro";
import Brush from "../../@common/Brush.astro";
import Yuna from "../../Yuna.astro";
import Daniela from "../../Daniela.astro";
import Profile from "./Profile.astro";
---

<section class="container">
  <Grid class="gap-y-8 lg:gap-y-0">
    <div
      class="col-span-full lg:col-start-1 lg:col-span-6 2xl:col-start-2 2xl:col-span-5"
    >
      <Profile profile={dataYuna}>
        <div slot="picture" class="relative isolate lg:w-[142px]">
          <Brush
            id={1}
            class="absolute z-[-1] w-[129px] lg:w-[142px] left-0 bottom-0 rotate-[180deg]"
          />
          <Yuna
            class="w-[82px] h-[204px] lg:w-[89px] lg:h-[220px] max-lg:ml-[24px] lg:mx-auto"
            alt="Portrait de Yuna Orsini"
          />
        </div>
      </Profile>
    </div>
    <div class="col-span-full lg:col-span-6 2xl:col-span-5">
      <Profile profile={dataDaniela}>
        <div slot="picture" class="relative isolate lg:w-[164px]">
          <Brush
            id={2}
            class="absolute z-[-1] w-[150px] lg:w-[164px] -left-[10px] lg:left-0 bottom-[11px] rotate-[90deg]"
          />
          <Daniela
            class="w-[82px] h-[204px] lg:w-[89px] lg:h-[220px] max-lg:ml-[24px] mx-auto"
            alt="Portrait de Daniela PeÃ±aranda"
          />
        </div>
      </Profile>
    </div>
  </Grid>
</section>
