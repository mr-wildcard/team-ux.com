---
import Tag from "../../../@common/Tag.astro";
interface Props {
  projects: {
    name: string;
    title: string;
    skills: string[];
  };
}

const { project } = Astro.props;
---

<div class="p-5 2xl:p-10 bg-surface5 rounded-[26px]">
  <p class="mb-5 text-headline-small 2xl:text-label-large">
    {project.name}
  </p>
  <h3 class="mb-8 text-headline-medium-bold">
    {project.title}
  </h3>
  <ul class="flex flex-wrap gap-2.5">
    {
      project.skills.map((skill) => {
        return (
          <li>
            <Tag name={skill} />
          </li>
        );
      })
    }
  </ul>
</div>
