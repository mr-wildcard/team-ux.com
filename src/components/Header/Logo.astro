---
import Icon from "../@common/Icon.astro";

const { pathname } = Astro.url;

const HTMLTag = pathname === "/" ? "div" : "a";
const htmlAttributes =
  pathname === "/" ? {} : { href: "/", title: "Retour Ã  l'accueil" };
---

<HTMLTag {...htmlAttributes}>
  <Icon name="logo" />
</HTMLTag>

<style>
  :global([astro-icon="logo"]) {
    width: 170px;
    height: 36px;

    @screen md {
      width: 197px;
      height: 40px;
    }
  }
</style>
