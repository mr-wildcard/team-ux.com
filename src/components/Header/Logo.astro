---
import Icon from "../@common/Icon.astro";

const { pathname } = Astro.url;

const HTMLTag = pathname === "/" ? "div" : "a";
const htmlAttributes =
  pathname === "/"
    ? { class: "cursor-pointer" }
    : { href: "/", title: "Retour Ã  l'accueil" };
---

<HTMLTag id="logo" {...htmlAttributes}>
  <Icon name="logo" />
</HTMLTag>

<style>
  :global([astro-icon="logo"]) {
    width: 170px;
    height: 36px;

    @screen lg {
      width: 189px;
      height: 40px;
    }
  }
</style>

<script>
  const logo = document.querySelector<HTMLElement>("#logo");

  if (!logo.hasAttribute("href")) {
    logo.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
      });
    });
  }
</script>
