---
const { pathname } = Astro.url;
const { to } = Astro.props;

let HTMLTag = "span";
let hrefAttribute = undefined;

if ("submenu" in Astro.slots) {
  HTMLTag = "button";
} else if (to !== pathname) {
  HTMLTag = "a";
  hrefAttribute = to;
}
---

<HTMLTag
  class="nav-item"
  href={hrefAttribute}
  class:list={["nav-item", { selected: pathname === to }]}
>
  <slot />

  <slot name="submenu" />
</HTMLTag>

<style>
  .nav-item {
    position: relative;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .nav-item:is(span, a) {
    @apply text-secondary;

    position: relative;
    white-space: nowrap;

    &.selected,
    &:hover {
      @apply text-primary;
    }
  }

  .nav-item:is(span, a).selected:after,
  .nav-item:is(span, a):hover:after,
  .nav-item:is(button):not(.opened):hover:after {
    @apply bg-primary;

    content: "";
    position: absolute;
    left: -1px;
    right: -1px;
    bottom: -4px;
    height: 2px;
    border-radius: 2px;
  }
</style>
