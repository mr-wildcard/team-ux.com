---
import Grid from "./@common/Grid.astro";
import BackgroundForm1 from "./BackgroundForm1.astro";

interface Props {
  title: string;
  subtitle: string;
  showBackgroundForm?: boolean;
  class?: string;
}

const { title, subtitle, class: cssClasses } = Astro.props;

const { showBackgroundForm = true } = Astro.props;
const backgroundFormCSSClasses = showBackgroundForm
  ? [
      "overflow-hidden",
      "2xl:mt-[-180px]",
      "2xl:mb-[-287px]",
      "2xl:pt-[273px]",
      "2xl:pb-[427px]",
    ]
  : [];
---

<section
  class:list={[
    backgroundFormCSSClasses,
    cssClasses,
    {
      "mt-[90px]": !showBackgroundForm,
    },
  ]}
>
  <div class="relative container">
    {
      showBackgroundForm && (
        <BackgroundForm1 class="absolute z-[-1] top-[-125px] right-[-540px]" />
      )
    }
    <Grid class="gap-y-6">
      <h1 class="2xl:col-start-2 2xl:col-span-full text-display-medium">
        {title}
      </h1>
      {
        subtitle && (
          <h2
            class="2xl:col-start-2 2xl:col-span-6 text-body-extra-large"
            set:html={subtitle}
          />
        )
      }
    </Grid>
  </div>
</section>
