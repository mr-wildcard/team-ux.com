---
import Grid from "../../@common/Grid.astro";
import Brush from "../../@common/Brush.astro";
import Expertise from "./Expertise.astro";
import data from "../../../data/homepage/expertises.yaml";
---

<section class="relative container mb-[140px]">
  <Grid>
    <h2
      class="xl:col-start-2 xl:col-span-full text-headline-medium text-neutral1 mb-10"
    >
      {data.title}
    </h2>

    <ul class="xl:col-start-2 xl:col-span-5 flex flex-col gap-8">
      {
        data.expertises.map((expertise, index) => {
          return (
            <li class="relative">
              <Expertise expertise={expertise} />

              {index === 0 && (
                <Brush
                  id="1"
                  class="absolute top-[28px] left-[-80px] z-[-1] w-[237px] h-[281px] rotate-[136.069deg]"
                />
              )}

              {index === 1 && (
                <Brush
                  id="4"
                  class="absolute top-[-39px] left-[481px] z-[-1] w-[490px] h-[487px]"
                />
              )}

              {index === 2 && (
                <Brush
                  id="1"
                  class="absolute top-[-89px] left-[-102px] z-[-1] w-[222px] h-[263px] rotate-[180deg]"
                />
              )}
            </li>
          );
        })
      }
    </ul>
  </Grid>
</section>
