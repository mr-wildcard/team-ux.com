---
import Footer from "components/Footer.astro";
import Breadcrumb from "components/Breadcrumb.astro";
import Contact from "components/Contact.astro";
import Hero from "components/pages/temoignages/Hero.astro";
import Testimonials from "components/pages/temoignages/Testimonials.astro";
import Layout from "layouts/Layout.astro";
---

<Layout
  title="Témoignages UX design - Team UX"
  description="Nos clientes et clients nous ont adressé de beaux témoignages suite à nos collaborations pour des projets d’UX design, de design accessible ou d’éco-conception."
  og_title="Témoignages sur Team UX 👋🏻 👋🏼 Design UX en freelance"
  og_description="Découvrez les (beaux) témoignages que nos clientes et clients nous ont adressés suite à notre collaboration. On n’est pas peu fières."
>
  <div class="hidden lg:block lg:mb-[90px]">
    <Breadcrumb />
  </div>

  <div class="max-lg:mt-[60px] mb-20 lg:mb-[140px]">
    <Hero />
  </div>

  <div class="mb-[200px]">
    <Testimonials />
  </div>

  <div class="mb-[150px] lg:mb-[170px]">
    <Contact />
  </div>

  <Footer />
</Layout>
