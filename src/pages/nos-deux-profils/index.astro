---
import Layout from "layouts/Layout.astro";
import Footer from "components/Footer.astro";
import Breadcrumb from "components/Breadcrumb.astro";
import Contact from "components/Contact.astro";
import Hero from "components/pages/nos-deux-profils/Hero.astro";
import Profiles from "components/pages/nos-deux-profils/Profiles.astro";
import ItsAMatch from "components/pages/nos-deux-profils/ItsAMatch.astro";
---

<Layout
  title="Profils d’UX designers freelances - Team UX"
  description="Nous sommes Daniela & Yuna, les 2 designers UX seniors qui forment le binôme freelance Team UX. Nous vous présentons nos profils et nos parcours respectifs."
  og_title="Qui se cache derrière Team UX ? 👋🏻 👋🏼  Nos 2 profils"
  og_description="Découvrez-en un peu plus sur Daniela & Yuna, les 2 profils qui forment le binôme Team UX. On vous présente nos 2 parcours d’UX designers seniors."
>
  <div class="hidden lg:block md:mb-[90px]">
    <Breadcrumb />
  </div>
  <div class="max-lg:mt-[60px] mb-20 lg:mb-[140px]">
    <Hero />
  </div>

  <div class="mb-[100px] lg:mb-[140px]">
    <Profiles />
  </div>

  <div class="mb-[180px] lg:mb-[160px]">
    <ItsAMatch />
  </div>

  <div class="mb-[150px] lg:mb-[170px]">
    <Contact />
  </div>

  <Footer />
</Layout>
